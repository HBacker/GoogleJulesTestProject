@{
    ViewData["Title"] = "Ders Yönetimi - Kurs Seçimi";
    Layout = "_layoutAdminLTE";
}

<div class="content-header" style="margin-left:270px">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content" style="margin-left:270px">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lütfen Derslerini Yönetmek İstediğiniz Kursu Seçin</h3>
            </div>
            <div class="card-body">
                <div id="coursesTableContainer" class="table-responsive">
                    <div class="alert alert-info" id="noCoursesMessage" style="display:none;">
                        Yönetilecek kurs bulunmamaktadır.
                    </div>
                    <table class="table table-striped table-hover" id="coursesTable" style="display:none;">
                        <thead>
                            <tr>
                                <th style="width: 10%;">ID</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th style="width: 20%; text-align: right;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="coursesTableBody">
                        </tbody>
                    </table>
                </div>
                 <div id="loadingCourses" class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3">Kurslar yükleniyor...</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            var apiBaseUrl = "@ViewBag.ApiBaseUrl";
            var token = localStorage.getItem("token");

            if (!token) {
                if (typeof notyf !== 'undefined') {
                    notyf.error("Giriş yapmanız gerekiyor.");
                }
                $('#loadingCourses').html('<div class="alert alert-warning">İçeriği görüntülemek için giriş yapmalısınız.</div>');
                return;
            }

            function fetchCourses() {
                $('#loadingCourses').show();
                $('#coursesTable').hide();
                $('#noCoursesMessage').hide();

                $.ajax({
                    url: apiBaseUrl + '/courses', 
                    type: 'GET',
                    headers: { 
                        "Authorization": "Bearer " + token 
                    },
                    success: function (data) {
                        $('#loadingCourses').hide();
                        var coursesTableBody = $('#coursesTableBody');
                        coursesTableBody.empty();

                        if (data && data.length > 0) {
                            $('#coursesTable').show();
                            $('#noCoursesMessage').hide();
                            $.each(data, function (i, course) {
                                var descriptionSnippet = course.description && course.description.length > 100 ?
                                    course.description.substring(0, 100) + '...' :
                                    course.description || '';

                                var row = `<tr>
                                            <td>${course.id}</td>
                                            <td>${course.title}</td>
                                            <td>${descriptionSnippet}</td>
                                            <td style="text-align: right;">
                                                <a href="/Admin/ManageCourseLessons?courseId=${course.id}" class="btn btn-sm btn-info" title="Dersleri Yönet">
                                                    <i class="fas fa-tasks"></i> Dersleri Yönet
                                                </a>
                                            </td>
                                        </tr>`;
                                coursesTableBody.append(row);
                            });
                        } else {
                            $('#coursesTable').hide();
                            $('#noCoursesMessage').show();
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#loadingCourses').hide();
                        if (typeof notyf !== 'undefined') {
                            notyf.error("Kurslar yüklenirken bir sorun oluştu.");
                        }
                        $('#coursesTableContainer').html('<div class="alert alert-danger">Kurslar yüklenemedi. Lütfen daha sonra tekrar deneyin.</div>');
                    }
                });
            }

            fetchCourses();
        });
    </script>
}
