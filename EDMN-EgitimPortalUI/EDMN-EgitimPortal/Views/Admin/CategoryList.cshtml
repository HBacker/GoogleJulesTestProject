@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "_layoutAdminLTE";
}

<div class="content-header" style="margin-left:270px">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="/Admin/CreateCategory" class="btn btn-success">
                    <i class="fas fa-plus mr-1"></i> Yeni Kategori Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content" style="margin-left:270px">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategoriler</h3>
            </div>
            <div class="card-body">
                <div id="categoriesTableContainer" class="table-responsive">
                    <div class="alert alert-info" id="noCategoriesMessage" style="display:none;">
                        Henüz kategori bulunmamaktadır.
                    </div>
                    <table class="table table-striped table-hover" id="categoriesTable" style="display:none;">
                        <thead>
                            <tr>
                                <th style="width: 10%;">ID</th>
                                <th>İsim</th>
                                <th style="width: 20%; text-align: right;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="categoriesTableBody">
                        </tbody>
                    </table>
                </div>
                 <div id="loadingCategories" class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3">Kategoriler yükleniyor...</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            var apiBaseUrl = "@ViewBag.ApiBaseUrl";
            var token = localStorage.getItem("token");

            if (!token) {
                if (typeof notyf !== 'undefined') {
                    notyf.error("Giriş yapmanız gerekiyor.");
                }
                // Consider redirecting to login or disabling functionality
                // location.href = "/Home/Login"; 
                $('#loadingCategories').html('<div class="alert alert-warning">İçeriği görüntülemek için giriş yapmalısınız.</div>');
                return;
            }

            function fetchCategories() {
                $('#loadingCategories').show();
                $('#categoriesTable').hide();
                $('#noCategoriesMessage').hide();

                $.ajax({
                    url: apiBaseUrl + '/categories',
                    type: 'GET',
                    headers: { 
                        "Authorization": "Bearer " + token 
                    },
                    success: function (data) {
                        $('#loadingCategories').hide();
                        var categoriesTableBody = $('#categoriesTableBody');
                        categoriesTableBody.empty();

                        if (data && data.length > 0) {
                            $('#categoriesTable').show();
                            $('#noCategoriesMessage').hide();
                            $.each(data, function (i, category) {
                                var row = `<tr>
                                            <td>${category.id}</td>
                                            <td>${category.name}</td>
                                            <td style="text-align: right;">
                                                <a href="/Admin/EditCategory/${category.id}" class="btn btn-sm btn-primary" title="Düzenle">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <button class="btn btn-sm btn-danger delete-category-btn" data-id="${category.id}" title="Sil">
                                                    <i class="fas fa-trash"></i> Sil
                                                </button>
                                            </td>
                                        </tr>`;
                                categoriesTableBody.append(row);
                            });
                        } else {
                            $('#categoriesTable').hide();
                            $('#noCategoriesMessage').show();
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#loadingCategories').hide();
                        if (typeof notyf !== 'undefined') {
                            notyf.error("Kategoriler yüklenirken bir sorun oluştu.");
                        }
                        $('#categoriesTableContainer').html('<div class="alert alert-danger">Kategoriler yüklenemedi. Lütfen daha sonra tekrar deneyin.</div>');
                        console.error("Kategori yükleme hatası:", xhr.responseText);
                    }
                });
            }

            fetchCategories();

            $(document).on('click', '.delete-category-btn', function () {
                var categoryId = $(this).data('id');
                
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kategoriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, Sil!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: apiBaseUrl + '/categories/' + categoryId,
                            type: 'DELETE',
                            headers: { 
                                "Authorization": "Bearer " + token 
                            },
                            success: function (response) {
                                if (typeof notyf !== 'undefined') {
                                    notyf.success("Kategori başarıyla silindi.");
                                }
                                fetchCategories(); 
                            },
                            error: function (xhr, status, error) {
                                var errorMessage = "Kategori silinirken bir hata oluştu.";
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                } else if (xhr.status === 403) {
                                    errorMessage = "Bu işlemi yapmak için yetkiniz bulunmamaktadır.";
                                } else if (xhr.responseText) {
                                   try {
                                        var err = JSON.parse(xhr.responseText);
                                        if (err && err.message) errorMessage = err.message;
                                    } catch(e) {}
                                }
                                if (typeof notyf !== 'undefined') {
                                    notyf.error(errorMessage);
                                }
                                console.error("Kategori silme hatası:", xhr.responseText);
                            }
                        });
                    }
                });
            });
        });
    </script>
}
